# Installing dependencies
apt-get install wget
apt-get install curl
apt-get install gawk
apt-get install sed
apt-get install grep
# Downloading Clutch (looking for the newest version, grabbing the link, downloading)
wget --no-check-certificate -O Clutch "https://github.com$(curl -k -L https://github.com/KJCracks/Clutch/releases/latest | grep "Clutch" | grep '\/download\/' | sed -e 's/"/ /g' | awk '{print $3}')"
# Moving Clutch to /usr/bin
mv Clutch /usr/bin/Clutch
# Setting Permissions
chown root:wheel /usr/bin/Clutch && chmod 755 /usr/bin/Clutch
echo "Clutch is now installed, happy cracking!"
# Do you want to configure Clutch?
read -p "Would you like to configure Clutch? (y/n)?" choice
case "$choice" in 
  y|Y ) echo "Loading Config utility"; Clutch -c ;
  n|N ) echo "Done
  * ) echo "invalid";;
esac
